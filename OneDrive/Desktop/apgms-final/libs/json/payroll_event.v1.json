{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Payroll Event",
  "type": "object",
  "required": [
    "event_type",
    "employee_id",
    "employee_tax_file_number",
    "gross_cents",
    "period_start",
    "period_end",
    "lines"
  ],
  "properties": {
    "event_type": { "const": "payroll" },
    "employee_id": { "type": "string", "minLength": 1 },
    "employee_tax_file_number": { "type": "string", "minLength": 1 },
    "gross_cents": { "type": "integer", "minimum": 0 },
    "period_start": { "type": "string", "format": "date" },
    "period_end": { "type": "string", "format": "date" },
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "amount_cents"],
        "properties": {
          "type": { "enum": ["earnings", "deduction", "super"] },
          "amount_cents": { "type": "integer" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}