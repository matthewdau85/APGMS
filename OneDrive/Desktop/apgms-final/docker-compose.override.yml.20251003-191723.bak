services:
  normalizer:
    environment:
      - PORT=8001
    ports:
      - "8000:8001"      # host 8000 -> container 8001
      - "8001:8001"  # host 8001 -> container 8001
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8001/healthz"]
      interval: 10s
      timeout: 3s
      retries: 5
      start_period: 5s
