    "schema_version": { "type": "string", "enum": ["v1", "v2"] },
    "ok": { "type": "boolean" },
    "ledger_id": { "type": "integer", "minimum": 0 },
    "balance_after_cents": { "type": "integer" }
  },
  "additionalProperties": true
}
