{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apgms.local/ml-assist/recon_event.json",
  "title": "ReconEvent",
  "type": "object",
  "required": ["event_id", "period_id", "bank_total", "ledger_total"],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique identifier for the reconciliation event"
    },
    "period_id": {
      "type": "string",
      "description": "Accounting or tax period identifier"
    },
    "bank_total": {
      "type": "number",
      "description": "Total from bank statements for the event"
    },
    "ledger_total": {
      "type": "number",
      "description": "Total from ledger records for the event"
    },
    "variance_threshold": {
      "type": "number",
      "minimum": 0,
      "default": 0.02,
      "description": "Relative variance tolerance"
    },
    "anomaly_flags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of anomaly signals detected upstream"
    }
  },
  "additionalProperties": false
}
