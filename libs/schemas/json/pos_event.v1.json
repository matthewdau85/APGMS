{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PosEventV1",
  "type": "object",
  "properties": {
    "event_type": { "const": "pos" },
    "version": { "type": "string" },
    "signed_at": { "type": "string" },
    "producer_id": { "type": "string" },
    "src_hash": { "type": "string" },
    "timestamp": { "type": "string" },
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sku": { "type": "string" },
          "qty": { "type": "integer", "minimum": 1 },
          "unit_price_cents": { "type": "integer", "minimum": 0 },
          "tax_code": { "type": "string", "enum": ["GST", "GST_FREE"] }
        },
        "required": ["qty", "unit_price_cents"]
      }
    }
  },
  "required": ["event_type", "lines"]
}
